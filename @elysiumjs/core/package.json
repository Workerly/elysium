{
	"name": "@elysiumjs/core",
	"version": "0.5.1",
	"license": "Apache-2.0",
	"description": "A super-charged web framework for Bun, built on top of ElysiaJS.",
	"private": false,
	"author": "Workbud Technologies Inc.",
	"repository": {
		"type": "git",
		"url": "https://github.com/workbud/elysium"
	},
	"homepage": "https://github.com/workbud/elysium",
	"scripts": {
		"format": "prettier --write \"./src/**/*.ts\"",
		"clean": "rimraf dist",
		"build:js": "bun build ./src/index.ts --outdir ./dist --target bun --packages external --root ./src --minify",
		"build:ts": "tsc",
		"build": "bun run clean && bun run build:js && bun run build:ts",
		"prepublishOnly": "bun run build"
	},
	"keywords": [
		"elysium",
		"framework",
		"web",
		"api",
		"typescript"
	],
	"module": "dist/index.js",
	"type": "module",
	"types": "dist/index.d.ts",
	"dependencies": {
		"@elysiajs/swagger": "^1.3.0",
		"cache-manager": "^6.4.3",
		"cacheable": "^1.9.0",
		"drizzle-orm": "^0.44.2",
		"elysia": "latest",
		"radash": "^12.1.0",
		"reflect-metadata": "^0.2.2",
		"wampy": "^7.1.1"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.4.2",
		"@types/bun": "latest",
		"rimraf": "^6.0.1",
		"type-fest": "^4.41.0"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	},
	"trustedDependencies": [
		"es5-ext"
	]
}
